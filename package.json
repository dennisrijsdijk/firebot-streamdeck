		"@rollup/plugin-typescript": "^11.1.5",
		"@tsconfig/node20": "^20.1.2",
		"@types/node": "20.8.10",
		"@typescript-eslint/eslint-plugin": "^7.13.0",
		"@typescript-eslint/parser": "^7.13.0",
		"eslint": "8.57",
		"html-formatter": "^0.1.9",
		"rollup": "^4.18.0",
		"rollup-plugin-copy": "^3.5.0",
		"tslib": "^2.6.3",
		"typescript": "^5.2.2"
	},
	"dependencies": {
